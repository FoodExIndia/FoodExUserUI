<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="2dp"
    android:layout_margin="2dp"
    android:background="@color/date_item_day"
    android:orientation="vertical" >

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        android:padding="0dp"
        android:fillViewport="false">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/GridLayoutUserDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="100"
        android:orientation="vertical"
        tools:context=".GridXMLActivity" >

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/UD"
            android:paddingBottom="5dp"
            android:orientation="horizontal">

        <!--<ImageView
            android:id="@+id/imgSample"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/icon_blurred"
            android:padding="2dp" />-->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:id="@+id/imgSample"
                android:text="Profile Info"
                android:layout_gravity="left"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginLeft="5dp"
                android:paddingBottom="5dp"
                android:textSize="25dp"
                android:padding="2dp"
                android:textColor="#33CC33"/>

            </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/UD1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/userIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/img_profile"
                android:padding="2dp" />

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:orientation="vertical">

                <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/usrName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FoodEx User"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_marginLeft="2dp"
                        android:padding="2dp"
                        android:textColor="#33CC33" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/UD2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/phoneIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/mobile_hint"
                android:padding="2dp" />

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:orientation="vertical">

                <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/usrContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Number"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_marginLeft="2dp"
                        android:padding="2dp"
                        android:textColor="#33CC33" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/UD3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mailIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_home"
                android:padding="2dp" />

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:orientation="vertical">

                <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mail ID"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_marginLeft="2dp"
                        android:padding="2dp"
                        android:textColor="#33CC33" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/UD4"
            android:orientation="horizontal">

            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Address Info"
                    android:layout_gravity="left"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="2dp"
                    android:textSize="25dp"
                    android:padding="2dp"
                    android:textColor="#33CC33"/>

                <ImageView
                    android:id="@+id/editIcon"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/edit_icon"
                    android:padding="2dp" />

            </RelativeLayout>

        <!--<TextView
            android:id="@+id/addressInfo"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="Address Info"
            android:scaleType="fitXY"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#33CC33"
            android:padding="2dp" />-->

        </LinearLayout>

        <EditText android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="#FAFAFA"
            android:id="@+id/address1"
            android:inputType="text"
            android:minHeight="30dp"
            style="@android:style/Widget.DeviceDefault.EditText"
            android:textColor="#010101"
            android:hint="Address Line 1"
            android:contextClickable="false"
            android:clickable="false"
            android:enabled="false"
            android:layout_margin="3dp" />

        <EditText android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="#FAFAFA"
            android:id="@+id/address2"
            android:inputType="text"
            android:minHeight="30dp"
            style="@android:style/Widget.DeviceDefault.EditText"
            android:textColor="#010101"
            android:hint="Address Line 2"
            android:enabled="false"
            android:contextClickable="false"
            android:clickable="false"
            android:layout_margin="3dp"/>

        <Spinner android:layout_height="25dp"
            android:layout_width="match_parent"
            android:background="#FAFAFA"
            android:id="@+id/city"
            android:minHeight="30dp"
            android:entries="@array/city_array"
            style="@android:style/Widget.Holo.Light.Spinner"
            android:textColor="#010101"
            android:hint="City"
            android:enabled="false"
            android:clickable="false"
            android:layout_margin="3dp" />

        <Spinner android:layout_height="25dp"
            android:layout_width="match_parent"
            android:background="#FAFAFA"
            android:id="@+id/area"
            android:minHeight="30dp"
            android:entries="@array/area_array"
            style="@android:style/Widget.Holo.Light.Spinner"
            android:textColor="#010101"
            android:hint="Area"
            android:enabled="false"
            android:clickable="false"
            android:layout_margin="3dp" />

        <Spinner android:layout_height="25dp"
            android:layout_width="match_parent"
            android:background="#FAFAFA"
            android:id="@+id/state"
            android:minHeight="30dp"
            android:entries="@array/state_array"
            style="@android:style/Widget.Holo.Light.Spinner"
            android:textColor="#010101"
            android:hint="State"
            android:enabled="false"
            android:clickable="false"
            android:layout_margin="3dp"/>

        <EditText android:layout_height="30dp"
            android:layout_width="match_parent"
            android:background="#FAFAFA"
            android:id="@+id/pincode"
            android:inputType="text"
            android:minHeight="30dp"
            style="@android:style/Widget.DeviceDefault.EditText"
            android:textColor="#010101"
            android:hint="Pincode"
            android:enabled="false"
            android:contextClickable="false"
            android:clickable="false"
            android:layout_margin="3dp" />

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/UD5"
            android:orientation="horizontal"/>

        <Button android:layout_height="30dp"
            android:layout_width="match_parent"
            android:id="@+id/saveAddress"
            android:text="Save"
            android:background="#28dc09"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:textAllCaps="true"
            android:enabled="false"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:layout_below="@+id/pincode" />

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/UD6"
            android:orientation="horizontal"/>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/UD7"
            android:orientation="horizontal">

            <Button android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/addNewAddress"
                android:text="Add Address"
                android:background="#28dc09"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textAllCaps="true"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_below="@+id/password" />

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/UD8"
            android:orientation="horizontal"/>

    </GridLayout>

    </RelativeLayout>

    </ScrollView>

    </LinearLayout>
