<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingTop="2dp"
    android:layout_margin="2dp"
    android:background="@color/date_item_day"
    android:orientation="vertical" >

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f2f2f2"
        android:padding="0dp"
        android:fillViewport="false">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#f2f2f2">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/GridLayoutUserDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="100"
        android:orientation="vertical"
        tools:context=".GridXMLActivity" >

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/UD"
            android:paddingBottom="5dp"
            android:orientation="horizontal">

        <!--<ImageView
            android:id="@+id/imgSample"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/icon_blurred"
            android:padding="2dp" />-->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:id="@+id/imgSample"
                android:text="Profile Info"
                android:layout_gravity="left"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginLeft="5dp"
                android:paddingBottom="5dp"
                android:textSize="25dp"
                android:padding="2dp"
                android:textColor="#33CC33"/>

            </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/UD1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/userIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/img_profile"
                android:padding="2dp" />

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:orientation="vertical">

                <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/usrName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_marginLeft="2dp"
                        android:padding="2dp"
                        android:textColor="#33CC33" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/UD2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/phoneIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/mobile_hint"
                android:padding="2dp" />

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:orientation="vertical">

                <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/usrContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_marginLeft="2dp"
                        android:padding="2dp"
                        android:textColor="#33CC33" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/UD3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mailIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_home"
                android:padding="2dp" />

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:orientation="vertical">

                <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/usrMail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_marginLeft="2dp"
                        android:padding="2dp"
                        android:textColor="#33CC33" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/UD10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mailIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_home"
                android:padding="2dp" />

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:orientation="vertical">

                <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery Timings"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_marginLeft="2dp"
                        android:padding="2dp"
                        android:textColor="#33CC33" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/UD11"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/BFtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BreakFast : "
                android:width="@android:dimen/thumbnail_width"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginLeft="2dp"
                android:padding="2dp"
                android:textColor="#33CC33" />

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:orientation="vertical">

                <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Spinner android:layout_height="30dp"
                        android:layout_width="match_parent"
                        android:background="#FAFAFA"
                        android:id="@+id/BFtimings"
                        android:minHeight="30dp"
                        android:entries="@array/BF_timings_array"
                        style="@android:style/Widget.Holo.Light.Spinner"
                        android:textColor="#010101"
                        android:hint="Select Timing"
                        android:enabled="false"
                        android:clickable="false"
                        android:layout_margin="3dp"/>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>



        <LinearLayout android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/UD12"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/LNtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lunch : "
                android:width="@android:dimen/thumbnail_width"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginLeft="2dp"
                android:padding="2dp"
                android:textColor="#33CC33" />

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:orientation="vertical">

                <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Spinner android:layout_height="30dp"
                        android:layout_width="match_parent"
                        android:background="#FAFAFA"
                        android:id="@+id/LNtimings"
                        android:minHeight="30dp"
                        android:entries="@array/LN_timings_array"
                        style="@android:style/Widget.Holo.Light.Spinner"
                        android:textColor="#010101"
                        android:hint="Select Timing"
                        android:enabled="false"
                        android:clickable="false"
                        android:layout_margin="3dp"/>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>



        <LinearLayout android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/UD13"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/DNtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dinner : "
                android:width="@android:dimen/thumbnail_width"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginLeft="2dp"
                android:padding="2dp"
                android:textColor="#33CC33" />

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:orientation="vertical">

                <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Spinner android:layout_height="30dp"
                        android:layout_width="match_parent"
                        android:background="#FAFAFA"
                        android:id="@+id/DNtimings"
                        android:minHeight="30dp"
                        android:entries="@array/DN_timings_array"
                        style="@android:style/Widget.Holo.Light.Spinner"
                        android:textColor="#010101"
                        android:hint="Select Timing"
                        android:enabled="false"
                        android:clickable="false"
                        android:layout_margin="3dp"/>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/UD8"
            android:orientation="horizontal"/>

    </GridLayout>

    </RelativeLayout>

    </ScrollView>

    </LinearLayout>
