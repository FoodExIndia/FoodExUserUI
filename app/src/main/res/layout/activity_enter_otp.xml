<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="user.com.foodexuserui.EnterOTP">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/OTP"
            android:background="#FAFAFA"
            android:minHeight="40dp"
            android:maxHeight="50dp"
            android:layout_margin="20dp"
            style="@android:style/Widget.DeviceDefault.EditText"
            android:shadowColor="@android:color/darker_gray"
            android:hint="Enter OTP"
            android:layout_above="@+id/confirmOTPbtn" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/confirmOTPbtn"
            android:minWidth="150dp"
            android:background="#28dc09"
            android:textAllCaps="true"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Resend OTP"
            android:id="@+id/Resendotp"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:typeface="serif"
            android:layout_below="@+id/confirmOTPbtn"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="OTP sent to the your number..."
            android:id="@+id/OTPlabel1"
            android:textSize="20dp"
            android:textAlignment="viewEnd"
            android:paddingBottom="20dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/OTPlabel2"
            android:layout_below="@+id/OTPlabel1"
            android:layout_centerHorizontal="true"
            android:textSize="25dp" />

    </RelativeLayout>

</LinearLayout>
